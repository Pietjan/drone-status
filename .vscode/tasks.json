// A task runner that calls a custom npm script that compiles the extension.
{
	"version": "2.0.0",
	"command": "npm",
	"type": "shell",
	"presentation": {
		"reveal": "never",
		"revealProblems": "onProblem"
	},
	"args": [
		"run",
		"compile",
		"--loglevel",
		"silent"
	],
	"isBackground": true,
	"problemMatcher": "$tsc-watch"
}
